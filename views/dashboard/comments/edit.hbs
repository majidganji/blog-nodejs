<div class="row">
    <div class="col-sm-12">
        <h3>ویرایش نظر: {{comment._id}}</h3>
        <hr>
        <p>
            <a href="/post/{{comment.post_id.slug}}" target="_blank" style="text-decoration: none;">مشاهده مطلب</a>
        </p>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <form action="/dashboard/comments/{{comment._id}}/edit" method="post">
            <input type="hidden" name="_csrf" value="">
            <div class="form-group">
                <label for="name">نام</label>
                <input type="text" id="name" name="name" value="{{comment.name}}" class="form-control">
            </div>
            <div class="form-group">
                <label for="email">پست الکترونیکی</label>
                <input type="text" id="email" name="email" value="{{comment.email}}" class="form-control">
            </div>
            <div class="form-group">
                <label for="comment">نظر</label>
                <textarea name="comment" id="comment" rows="10"  class="form-control">{{comment.body}}</textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">ذخیره</button>
                <a href="/dashboard/comments" class="btn btn-default">لغو</a>
            </div>
        </form>
    </div>
</div>
