<div class="row">
    <div class="col-sm-12">
        <h3>{{title}}</h3>
        <hr>
        <a href="/dashboard/users/delete/{{user._id}}" class="btn btn-danger" onclick="return confirm('آیا حذف شود؟')">حذف</a>
        <a href="/dashboard/users/edit/{{user._id}}" class="btn btn-warning">ویرایش</a>
        <p></p>
    </div>
</div>
<p></p>
<div class="row">
    <div class="col-sm-12">
        <div class="form-group">
            <label for="name">نام</label>
            <input type="text" disabled class="form-control" id="name" value="{{user.name}}">
        </div>
        <div class="form-group">
            <label for="username">نام کاربری</label>
            <input type="text" disabled class="form-control" id="username" value="{{user.username}}">
        </div>
        <div class="form-group">
            <label for="email">پست الکترونیکی</label>
            <input type="text" disabled class="form-control" id="email" value="{{user.email}}">
        </div>
        <div class="form-group">
            <label for="name">وضعیت</label>
            <select disabled class="form-control form-control-select" id="name">
                <option {{selected user.status 10}} value="10">مدیر کل</option>
                <option {{selected user.status 9}} value="9">مدیر</option>
                <option {{selected user.status 1}} value="1">نویسنده</option>
                <option {{selected user.status 0}} value="0">غیر فعال</option>
            </select>
        </div>
    </div>
</div>

