<div class="row">
    <div class="col-sm-12">
        <h3>{{title}}</h3>
        <hr>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <form action="/dashboard/users/search" method="get">
            <div class="form-group">
                <label for="name">نام</label>
                <input type="text" name="name" id="name" class="form-control" value="{{data.name}}">
            </div>
            <div class="form-group">
                <label for="username">نام کاربری</label>
                <input type="text" name="username" id="username" class="form-control" value="{{data.username}}">
            </div>
            <div class="form-group">
                <label for="email">پست الکترونیکی</label>
                <input type="text" name="email" id="email" class="form-control" value="{{data.email}}">
            </div>
            <div class="form-group">
                <label for="status">وضعیت</label>
                <select name="status" id="status" class="form-control form-control-select">
                    <option value=""></option>
                    <option {{selected data.status 10}} value="10">مدیر کل</option>
                    <option {{selected data.status 9}} value="9">مدیر</option>
                    <option {{selected data.status 1}} value="1">نویسنده</option>
                    <option {{selected data.status 0}} value="0">غیر فعال</option>
                </select>
            </div>
            <div class="form-group">
                <button class="btn btn-default" type="submit">جستجو</button>
                <a class="btn btn-default" href="/dashboard/users/search">لغو</a>
            </div>
        </form>
    </div>
</div>

{{#if users}}
    <div class="row">
        <div class="col-sm-12">
            <table class="table table-responsive">
                <thead>
                <tr>
                    <th>&nbsp;</th>
                    <th>نام</th>
                    <th>نام کاربری</th>
                    <th>پست الکترونیکی</th>
                    <th>وضعیت</th>
                    <th><span class="fa fa-gear"></span></th>
                </tr>
                </thead>
                <tbody>
                {{#each users}}
                    <tr>
                        <td>{{index @index}}</td>
                        <td>{{this.name}}</td>
                        <td>{{this.username}}</td>
                        <td>{{this.email}}</td>
                        <td>{{status this.status}}</td>
                        <td>
                            <a href="/dashboard/users/delete/{{this._id}}" class="text-danger"
                               onclick="return confirm('آیا حذف شود؟')"><span class="fa fa-trash"></span></a>
                            <a href="/dashboard/users/edit/{{this._id}}" class="text-warning"><span
                                    class="fa fa-edit"></span></a>
                            <a href="/dashboard/users/view/{{this._id}}" class="text-info"><span
                                    class="fa fa-eye"></span></a>
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
{{/if}}