{{#if hasError }}
    <div class="row">
        <div class="col-sm-12">
            <div class="alert alert-danger">
                <ul >
                    {{#each message}}
                        <li><p>{{this}}</p></li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
{{/if}}
<form action="/dashboard/new-post" method="post" enctype="multipart/form-data">
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
    <div class="row">
        <div class="col-sm-12">
            <div class="form-group">
                <label for="title">عنوان</label>
                <input type="text" id="title" name="title" class="form-control" value="{{post.title}}">
            </div>
            <div class="form-group">
                <label for="slug">مسیر</label>
                <p class="text-description paddingright15px text-muted"><span class="fa fa-info"></span>&nbsp; مسیر نام انگلیسی و یکتا  برای پیدا کردن مطلب مورد نظر است. که در Url بالای صفحه درج می‌شود.</p>
                <input type="text" id="slug" name="slug" class="form-control text-direction-ltr" value="{{post.slug}}">
            </div>
            <div class="form-group">
                <label for="body">متن</label>
                <textarea name="body" id="body" cols="50" rows="10">{{post.body}}</textarea>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label for="image">تصویر</label>
                <input type="file" id="image" name="image" value="{{post.image}}"/>
            </div>
            <div class="form-group">
                <label for="publish">وضعیت:</label>
                <select name="publish" id="publish">
                    <option value="10">منتشر شده</option>
                    <option value="1">پیش نویس</option>
                    <option value="0">عدم نمایش</option>
                </select>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">ذخیره</button>
                <a href="/dashboard/posts" class="btn btn-default">لغو</a>
            </div>
        </div>
    </div>
</form>

<script src="/ckeditor/ckeditor.js"></script>
<script>
    CKEDITOR.replace( 'body' );
</script>