<div class="row">
    <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 well" style="transform: translateY(35%);">
        <h1>ورود</h1>
        <hr />
        {{#if hasError}}
            <div class="alert alert-danger">
                <ul>
                    {{#each messages}}
                        <li>{{this}}</li>
                    {{/each}}
                </ul>
            </div>
        {{/if}}
        <form action="/admin/login" method="post">
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <div class="form-group">
                <label for="username">نام کاربری</label>
                <input id="username" name="username" type="text" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="password">رمز عبور</label>
                <input type="password" id="password" name="password" class="form-control" required>
            </div>
            <div class="form-group">
                <p>
                    <button type="submit" class="btn btn-success">ورود</button>&nbsp;
                    <a href="/admin/reset-password">رمز عبور را فراموش کردید؟</a>
                </p>
            </div>
        </form>
    </div>
</div>